<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:opencv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <org.opencv.android.JavaCameraView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:id="@+id/cameraViewOpencv"
        opencv:show_fps="true"/>

    <SeekBar
        android:id="@+id/SkBalpha"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_weight="1" />

    <SeekBar
        android:id="@+id/SkBbeta"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignStart="@id/SkBalpha"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="90dp"
        android:layout_weight="1" />

    <SeekBar
        android:id="@+id/SkBGblur"
        android:layout_width="300dp"
        android:layout_height="20dp"
        android:layout_alignStart="@id/SkBbeta"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="150dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/AlphaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="330dp"
        android:layout_alignBottom="@+id/SkBalpha"
        android:text="TextView" />

    <TextView
        android:id="@+id/BetaTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="330dp"
        android:layout_alignBottom="@id/SkBbeta"
        android:text="TextView"/>

    <TextView
        android:id="@+id/GblurTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="330dp"
        android:layout_alignBottom="@id/SkBGblur"
        android:text="TextView"/>


</RelativeLayout>